{
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "transpileOnly": true,
    "files": true,
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "target": "ES5",
    "lib": ["es5", "DOM"],
    "skipLibCheck": true,
    "rootDir": "./",
    "outDir": "build",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "declaration": true,
    "allowJs": true,
    "noEmit": true,
    "baseUrl": "./*",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["**/*.ts", "server.js", "./*", "server.ts"],
  "exclude": ["node_modules"]
}
